<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="net.softsociety.spring03.dao.CompanyDAO">
<insert id="insertCompanyInfo" parameterType="Company_info">
	insert into CAPA_Company_info (
		company_name,
		sales,
		employees,
		c_address,
		homepage,
		salary_AVG,
		filed,
		scale,
		info,
		Edate,
		logo	
	) values (
		#{company_name},
		#{sales},
		#{employees},
		#{c_address},
		#{homepage},
		#{salary_AVG},
		#{filed},
		#{scale},
		#{info},
		#{Edate},
		#{logo}
	)
	
</insert>
<select id="selectCompany" parameterType="String" resultType="List">
<!-- 	select * from CAPA_Company_info 
	where company_name
	like '%'||#{company_name}||'%' 
	order by -->
	
	select * from CAPA_Company_info
		<where>
			<if test="company_name!=null">
				 
			</if>
		</where>
		
		
</select>
<select id="selectAll" resultType="Company_info">
	select * from CAPA_Company_info
</select>

<select id="readinfo" parameterType="String" resultType="Company_info">
	select * from CAPA_Company_info
	where 
	
		company_name = #{company_name}
</select>
</mapper>